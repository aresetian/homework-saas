-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => 'ratings_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag("ratings[#{rating}]", 1, !params[:ratings].nil? && params[:ratings].has_key?(rating))
  = hidden_field_tag('title_hilite', params[:title_hilite])
  = hidden_field_tag('release_hilite', params[:release_hilite])
  = hidden_field_tag('sort_id', params[:sort_id])
  = submit_tag 'Refresh', :id => 'ratings_submit'
  
%table#movies
  %thead
    %tr
      %th{:class => params[:title_hilite]}
        = link_to 'Movie Title', movies_path({:sort_id => "title", :title_hilite => "hilite", :ratings => params[:ratings]}), {:id => 'title_header'}
      %th Rating
      %th{:class => params[:release_hilite]}
        = link_to 'Release Date', movies_path({:sort_id => "release_date", :release_hilite => "hilite", :ratings => params[:ratings]}), {:id => 'release_date_header'}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
